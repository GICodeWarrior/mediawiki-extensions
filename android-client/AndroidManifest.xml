<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="org.mediawiki.android.client"
		  android:versionName="@string/app_version" android:versionCode="7">
    <application android:icon="@drawable/mediawiki" android:label="@string/app_name">
    	<activity android:name=".MainPage"
				  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="org.mediawiki.android.client.MainPage.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditPage"
                  android:label="@string/intent_edit">
            <intent-filter>
                <action android:name="org.mediawiki.android.EditPage.EDIT"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".ViewPage"
                  android:label="@string/intent_view">
            <intent-filter>
                <action android:name="org.mediawiki.android.ViewPage.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".SearchPage"
                  android:label="@string/intent_search">
            <intent-filter>
                <action android:name="org.mediawiki.android.SearchPage.SEARCH"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name=".ConfigurationPage"
                  android:label="@string/intent_config">
            <intent-filter>
                <action android:name="org.mediawiki.android.client.ConfigurationPage.CONFIG"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>