<?xml version="1.0" encoding="ISO-8859-1" ?>
<package version="1.0">
    <name>File_Ogg</name>
    <summary>This package provides access to logical bitstreams packaged within an ogg file.</summary>
    <description>
        This package provides access to various media types inside an Ogg bitsream.  Currently only metadata retrieval from Vorbis audio is available.
    </description>
    <maintainers>
        <maintainer>
            <user>djg</user>
            <role>lead</role>
            <name>David Grant</name>
            <email>david@grant.org.uk</email>
        </maintainer>
    </maintainers>
    <release>
        <version>0.2.1</version>
        <date>2005-11-03</date>
        <license>GNU LGPL</license>
        <state>beta</state>
        <notes>
            This is a bugfix release.
        </notes>
        <filelist>
            <dir name="File" role="php">
                <file role="php">Ogg.php</file>
                <dir name="Ogg" role="php">
                    <file>Bitstream.php</file>
                    <file>Flac.php</file>
                    <file>Speex.php</file>
                    <file>Theora.php</file>
                    <file>Vorbis.php</file>
                </dir>
            </dir>
        </filelist>
    </release>
    <changelog>
		<release>
		    <version>0.2.1</version>
		    <state>beta</state>
		    <date>2005-11-03</date>
		    <notes>Fixed some basic bugs from the previous release.</notes>
        </release>
		<release>
		    <version>0.2.0</version>
		    <state>beta</state>
		    <date>2005-11-03</date>
		    <notes>Updated to beta release, changed license to LGPL.</notes>
        </release>
		<release>
		    <version>0.1.3</version>
		    <state>alpha</state>
		    <date>2005-09-21</date>
		    <notes>Change to package.xml.</notes>
        </release>
        <release>
            <version>0.1.2</version>
            <state>alpha</state>
            <date>2003-09-09</date>
            <notes>Extensive documentation for the majority of PHP elements.</notes>
        </release>
        <release>
            <version>0.1.1</version>
            <state>alpha</state>
            <date>2003-09-02</date>
            <notes>Bugfix release:  package was installing in the wrong location.</notes>
        </release>
        <release>
