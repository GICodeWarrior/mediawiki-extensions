PROGRAM = willow
BINDIR = @bindir@
CPPFLAGS = -I../include

BASESRCS =	 		\
	willow.cc 		\
	wconfig.cc		\
	whttp.cc		\
	chunking.cc		\
	wbackend.cc		\
	whttp_entity.cc		\
	wcache.cc		\
	confparse.cc		\
	wnet.cc			\
	wnet_libevent.cc	\
	wlog.cc			\
	whttp_header.cc		\
	radix.cc		\
	flowio.cc

OBJS=	$(BASESRCS:.cc=.o)

SRCS=$(BASESRCS)
OBJADD = @LIBOBJS@ y.tab.o lex.yy.o

EXTRA_DIST= strlcat.c strlcpy.c \
	lexer.l parser.y \
	daemon.c \
	Makefile.in

LDFLAGS = $(LIBOBJS)

.SUFFIXES: .y .l .c .cc .o

default: all

y.tab.o: y.tab.cc ../include/confparse.h ../include/willow.h
lex.yy.o: lex.yy.cc y.tab.h ../include/confparse.h ../include/willow.h

y.tab.cc y.tab.h: parser.y
	@echo "	$(_YACC) -d parser.y"
	@$(_YACC) -d parser.y
	@mv y.tab.c y.tab.cc
lex.yy.cc: lexer.l y.tab.h
	@echo "	$(_LEX) lexer.l"
	@$(_LEX) lexer.l || rm -f lex.yy.c
	@test -f lex.yy.c && mv lex.yy.c lex.yy.cc

@include@ @q@@top_srcdir@/mk/prog.mk@q@
