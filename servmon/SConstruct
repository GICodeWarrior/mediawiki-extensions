# Set build options here.
#
# Compiler
cc = '/opt/gcc-3.4/bin/gcc'
cxx = '/opt/gcc-3.4/bin/g++'

cflags = '-O2 -g -W -Wall'
cppflags = ''

# Where things are installed to.
prefix = '/opt/servmon'

# Don't change anything below here.
####################################
import os

srcs = Split('servmon.cxx csmplex.cxx smthr.cxx smnet.cxx smutl.cxx smcfg.cxx')
env = Environment(CPPFLAGS = cppflags + ' -DPFX="\\"' + prefix + '\\""',
		CCFLAGS = cflags,
		CC = cc,
		CXX = cxx,
		CPPPATH = 'include')
env.Program ('servmon', srcs, LIBS = 'pthread')
env.Program ('initconf', ['initconf.cxx', 'smcfg.cxx'], LIBS = 'pthread')
env.Alias('install', prefix)
