<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='network/sshtunnel' type='service' version='0'>
    <create_default_instance enabled='false'/>
    <dependency name='multi-user-server' grouping='optional_all' restart_on='none' type='service'>
      <service_fmri value='svc:/milestone/multi-user-server'/>
    </dependency>
    <exec_method name='start' type='method' exec='/opt/ts/bin/sshtunnel-smf' timeout_seconds='60'>
      <method_context/>
    </exec_method>
    <exec_method name='stop' type='method' exec=':kill' timeout_seconds='60'>
      <method_context/>
    </exec_method>
    <property_group name='tunnel' type='application'>
      <propval name='local-port' type='integer' value='0'/>
      <propval name='remote-host' type='astring' value=''/>
      <propval name='remote-port' type='integer' value='0'/>
    </property_group>
    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='child'/>
    </property_group>
    <template>
      <common_name>
        <loctext xml:lang='C'>SSH tunnel</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
