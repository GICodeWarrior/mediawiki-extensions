PROGRAM = loreley 
BINDIR = $(_BINDIR)
CPPFLAGS = -I../include

BASESRCS =	 		\
	a_cachedir.cc		\
	access.cc		\
	backend.cc		\
	cache.cc		\
	cachedentity.cc		\
	cachedir_data_store.cc	\
	chunking.cc		\
	config.cc		\
	confgrammar.cc		\
	confparse.cc		\
	dbwrap.cc		\
	expr.cc			\
	flowio.cc		\
	htcp.cc			\
	http.cc			\
	http_header.cc		\
	ifname_to_address.cc	\
	log.cc			\
	net.cc			\
	net_solaris.cc		\
	net_unix.cc		\
	preprocessor.cc		\
	radix.cc		\
	loreley.cc 		\

OBJS=	$(BASESRCS:.cc=.o)

SRCS=$(BASESRCS)
OBJADD = @LIBOBJS@

EXTRA_DIST= strlcat.c strlcpy.c \
	daemon.c \
	Makefile.in

LDFLAGS = $(LIBOBJS) -L../libloreley -lloreley
EXTRADEPS=../libloreley/libloreley.a

.SUFFIXES: .c .cc .o

default: all

@include@ @q@@top_srcdir@/mk/prog.mk@q@
