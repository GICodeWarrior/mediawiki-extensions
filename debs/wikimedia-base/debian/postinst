#! /bin/sh
# postinst script for wikimedia-base
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

. /usr/share/debconf/confmodule

case "$1" in
    configure)
	# Determine which cluster this host is part of
	if [ -f /etc/wikimedia-cluster ]
	then
		CLUSTERNAME=$(cat /etc/wikimedia-cluster)
	else
		# FIXME: we can (need?) to do better than this
		case $(hostname -d) in
		knams.wikimedia.org)
			CLUSTERNAME=knams
			;;
		yaseo.wikimedia.org)
			CLUSTERNAME=yaseo
			;;
		pmtpa.wmnet|wikimedia.org)
			CLUSTERNAME=pmtpa
			;;
		esac
		
		echo $CLUSTERNAME > /etc/wikimedia-cluster
	fi

	if ! grep -qs "^Explanation: Prefer Wikimedia APT repository packages in all cases" /etc/apt/preferences
	then
		# Set package pinning to prefer Wikimedia APT repository packages
		[ -f /etc/apt/preferences ] && echo >> /etc/apt/preferences
		cat /usr/share/doc/wikimedia-base/apt_preferences >> /etc/apt/preferences
	fi

	# Pick a closer NTP server
	NTP_SERVER=""
	case $CLUSTERNAME in
	pmtpa)
		NTP_SERVER=zwinger.wikimedia.org
		;;
	esac
	if [ -n "$NTP_SERVER" ] && ! grep -q "^server $NTP_SERVER" /etc/ntp.conf
	then
		sed -i -e "/^server ntp\.ubuntu\.com/s/ntp\.ubuntu\.com/$NTP_SERVER/" /etc/ntp.conf
		invoke-rc.d ntp-server restart
	fi

	# Optimize TCP
	if ! grep -q "^### START: Added by wikimedia-base" /etc/sysctl.conf
	then
		cat /usr/share/doc/wikimedia-base/sysctl.conf >> /etc/sysctl.conf
		sysctl -p /usr/share/doc/wikimedia-base/sysctl.conf
	fi

        # Set up a minimalistic MTA
        MAILHUB=""
        case $CLUSTERNAME in
        pmtpa)
                MAILHUB=goeje.wikimedia.org
                ;;
        knams)
                MAILHUB=pascal.knams.wikimedia.org
                ;;
        yaseo)
                MAILHUB=amaryllis.yaseo.wikimedia.org
                ;;
        esac
        db_get ssmtp/mailhub
        if [ "$RET" == "mail" ]
	then
		db_set ssmtp/mailhub "$MAILHUB"
		dpkg-reconfigure ssmtp
	fi

	# Default editor joe? wtf!?
	update-alternatives --install /usr/bin/editor editor /usr/bin/vim 75 \
		--slave /usr/share/man/man1/editor.1.gz editor.1.gz \
		/usr/share/man/man1/vim.1.gz

	# Enable smartd
	if ! [ -f /var/run/smartd.pid ] || ! kill -0 $(cat /var/run/smartd.pid)
	then
		sed -i -e '/^#start_smartd=yes/s/^#//' /etc/default/smartmontools
		invoke-rc.d smartmontools start
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


