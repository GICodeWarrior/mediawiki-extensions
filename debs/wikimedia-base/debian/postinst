#! /bin/sh
# postinst script for wikimedia-base
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
	if ! grep -qs "^Explanation: Prefer Wikimedia APT repository packages in all cases" /etc/apt/preferences
	then
		# Set package pinning to prefer Wikimedia APT repository packages
		[ -f /etc/apt/preferences ] && echo >> /etc/apt/preferences
		cat /usr/share/doc/wikimedia-base/apt_preferences >> /etc/apt/preferences
	fi

	# Optimize TCP
	if ! grep -q "^### START: Added by wikimedia-base" /etc/sysctl.conf
	then
		cat /usr/share/doc/wikimedia-base/sysctl.conf >> /etc/sysctl.conf
		sysctl -p /usr/share/doc/wikimedia-base/sysctl.conf
	fi	
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


