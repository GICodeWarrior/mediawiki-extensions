#! /bin/sh
# postinst script for wikimedia-task-dns-auth
#
# see: dh_installdeb(1)
# vim: set sw=4 ts=4 noet :

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

create_apache_user() {
        # Create apache user/group with correct uid/gid
        if ! getent group apache > /dev/null
        then
                addgroup --system --gid 48 apache
        fi

        if ! getent passwd apache > /dev/null
        then
                adduser --system --home /var/www --shell /sbin/nologin --no-create-home --uid 48 --gid 48 --disabled-password apache
        fi
}

case "$1" in
	configure)
	# Add a line to /etc/motd describing the task of this server
	if [ -f /etc/motd.tail ]
	then
		MOTDFILE=/etc/motd.tail
	else
		MOTDFILE=/etc/motd
	fi

	if ! grep -qs "wikimedia-task-appserver" $MOTDFILE
	then
		echo "$(hostname) is a Wikimedia application server (wikimedia-task-appserver)." >> $MOTDFILE

		if [ -f /etc/motd.tail ]
		then
			# Update motd
	 		uname -snrvm > /var/run/motd
			cat /etc/motd.tail >> /var/run/motd
		fi
	fi

	create_apache_user

	;;

	abort-upgrade|abort-remove|abort-deconfigure)

	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


