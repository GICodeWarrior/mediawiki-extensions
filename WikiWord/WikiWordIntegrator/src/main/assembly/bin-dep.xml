<assembly>
  <id>bin-dep</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>*GPL*</include>
        <include>NOTICE*</include>
        <include>*.properties</include>
        <include>*.sh</include>
        <include>*.bat</include>
        <include>*.sample</include>
      </includes>
      <excludes>
        <exclude>debug.*</exclude>
        <exclude>debug-*</exclude>
        <exclude>local.*</exclude>
        <exclude>local-*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>doc</directory>
    </fileSet>
	  <fileSet>
      <directory>src/doc</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>    
	  <fileSet>
      <directory>src/docbook</directory>
      <outputDirectory>doc</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>    
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>junit:junit</exclude>
        <exclude>org.apache.maven.wagon:wagon-ssh</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>