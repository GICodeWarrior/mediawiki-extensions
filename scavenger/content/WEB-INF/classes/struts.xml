<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml" />
	
        <package name="scavenger" extends="struts-default">
                <action name="view" class="org.mediawiki.scavenger.action.View">
                        <result name="success" type="freemarker">/WEB-INF/ftl/view.ftl</result>
                        <result name="mainpage" type="redirect-action">
                        	<param name="title">Main_Page</param>
                        	<param name="actionName">view</param>
                        </result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>
                
                <action name="edit" class="org.mediawiki.scavenger.action.Edit">
                	<result name="success" type="freemarker">/WEB-INF/ftl/edit.ftl</result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>

                <action name="submit" class="org.mediawiki.scavenger.action.Submit">
                	<result name="success" type="freemarker">/WEB-INF/ftl/submit.ftl</result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>
                                
                <action name="history" class="org.mediawiki.scavenger.action.History">
                	<result name="success" type="freemarker">/WEB-INF/ftl/history.ftl</result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>

                <action name="diff" class="org.mediawiki.scavenger.action.Diff">
                	<result name="success" type="freemarker">/WEB-INF/ftl/diff.ftl</result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>
                                
				<action name="recentchanges" class="org.mediawiki.scavenger.action.RecentChanges">
					<result name="success" type="freemarker">/WEB-INF/ftl/recentchanges.ftl</result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>

				<action name="allpages" class="org.mediawiki.scavenger.action.AllPages">
					<result name="success" type="freemarker">/WEB-INF/ftl/allpages.ftl</result>
                	<result name="error" type="freemarker">/WEB-INF/ftl/error.ftl</result>
                </action>
			
        </package>
</struts>
